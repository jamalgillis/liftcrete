---
// Footer component
const services = [
  { name: "Driveways", href: "#services" },
  { name: "Sidewalks", href: "#services" },
  { name: "Patios & Pool Decks", href: "#services" },
  { name: "Garage Floors", href: "#services" }
];

const socialLinks = [
  { icon: "facebook", href: "#" },
  { icon: "instagram", href: "#" },
  { icon: "linkedin", href: "#" }
];
---

<footer class="bg-dark py-16">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-10 mb-12">
      <!-- Logo & About -->
      <div class="lg:col-span-2">
        <a href="#" class="flex items-center gap-2 mb-6">
          <div class="w-10 h-10 bg-accent flex items-center justify-center">
            <i data-lucide="triangle" class="w-6 h-6 text-white"></i>
          </div>
          <span class="font-heading font-bold text-xl text-white">LIFTCRETE</span>
        </a>
        <p class="text-white/60 leading-relaxed max-w-sm mb-6">
          Polyurethane concrete raising and leveling for Central Texas. Raise it. Don't replace it.
        </p>
        <div class="flex gap-4">
          {socialLinks.map((social) => (
            <a href={social.href} class="w-10 h-10 bg-white/10 flex items-center justify-center hover:bg-accent transition-colors">
              <i data-lucide={social.icon} class="w-5 h-5 text-white"></i>
            </a>
          ))}
        </div>
      </div>

      <!-- Services -->
      <div>
        <h4 class="font-heading font-semibold text-white mb-6">Services</h4>
        <ul class="space-y-3">
          {services.map((service) => (
            <li>
              <a href={service.href} class="text-white/60 hover:text-accent transition-colors">{service.name}</a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="font-heading font-semibold text-white mb-6">Contact</h4>
        <ul class="space-y-3">
          <li class="text-white/60">1453 Old Mexia Rd</li>
          <li class="text-white/60">Waco, TX 76705</li>
          <li class="text-white/60">Central Texas</li>
          <li><a href="mailto:info@liftcrete.com" class="text-white/60 hover:text-accent transition-colors">info@liftcrete.com</a></li>
        </ul>
      </div>
    </div>

    <div class="border-t border-white/10 pt-8 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-white/40 text-sm">&copy; 2025 Liftcrete. All rights reserved.</p>
      <div class="flex gap-6">
        <a href="#" class="text-white/40 hover:text-white text-sm transition-colors">Privacy Policy</a>
        <a href="#" class="text-white/40 hover:text-white text-sm transition-colors">Terms of Service</a>
      </div>
    </div>
  </div>
</footer>

<!-- Back to Top Button -->
<button id="back-to-top" class="back-to-top fixed bottom-8 right-8 w-12 h-12 bg-accent text-white flex items-center justify-center shadow-lg hover:bg-accent-hover transition-all z-40">
  <i data-lucide="arrow-up" class="w-5 h-5"></i>
</button>
