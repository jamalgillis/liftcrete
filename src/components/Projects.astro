---
// Projects section component - Featured projects from data
import { projects as allProjects } from '../data/projects';

// Get first 6 projects for homepage featured section
const projects = allProjects.slice(0, 6);
---

<section id="projects" class="py-24 lg:py-32 bg-dark">
  <div class="max-w-7xl mx-auto px-6 lg:px-8">
    <div class="text-center mb-16 reveal">
      <p class="text-accent font-medium uppercase tracking-widest mb-4">Our Work</p>
      <h2 class="text-4xl md:text-5xl font-heading font-bold text-white mb-6">Featured Projects</h2>
      <div class="divider mx-auto"></div>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 reveal-stagger">
      {projects.map((project) => (
        <a href={`/projects/${project.slug}`} class="project-card relative aspect-[4/3] cursor-pointer block">
          <img src={project.image}
               alt={project.alt}
               class="w-full h-full object-cover" />
          <div class="project-overlay absolute inset-0 bg-gradient-to-t from-black/90 via-black/50 to-transparent flex items-end p-6">
            <div class="project-content">
              <span class="text-accent text-sm uppercase tracking-wider">{project.category}</span>
              <h3 class="text-xl font-heading font-bold text-white mt-1">{project.title}</h3>
              <p class="text-white/70 text-sm mt-2 line-clamp-2">{project.description}</p>
            </div>
          </div>
        </a>
      ))}
    </div>

    <div class="text-center mt-12 reveal">
      <a href="/projects" class="btn-outline">View All Projects</a>
    </div>
  </div>
</section>
