---
interface Props {
  title: string;
  subtitle?: string;
  breadcrumb?: { label: string; href: string }[];
}

const { title, subtitle, breadcrumb = [] } = Astro.props;
---

<section class="page-hero relative bg-dark pt-32 pb-20 lg:pt-40 lg:pb-28 overflow-hidden">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute top-0 right-0 w-96 h-96 bg-accent rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-96 h-96 bg-accent rounded-full blur-3xl"></div>
  </div>

  <div class="max-w-7xl mx-auto px-6 lg:px-8 relative z-10">
    <!-- Breadcrumb -->
    {breadcrumb.length > 0 && (
      <nav class="breadcrumb mb-6 animate-fade-in-up opacity-0" style="animation-delay: 200ms; animation-fill-mode: forwards;">
        <ol class="flex items-center gap-2 text-sm">
          <li>
            <a href="/" class="text-white/60 hover:text-accent transition-colors">Home</a>
          </li>
          {breadcrumb.map((item, index) => (
            <>
              <li class="text-white/40">/</li>
              <li>
                {index === breadcrumb.length - 1 ? (
                  <span class="text-accent">{item.label}</span>
                ) : (
                  <a href={item.href} class="text-white/60 hover:text-accent transition-colors">{item.label}</a>
                )}
              </li>
            </>
          ))}
        </ol>
      </nav>
    )}

    <!-- Title -->
    <h1 class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold text-white mb-4 animate-fade-in-up opacity-0" style="animation-delay: 300ms; animation-fill-mode: forwards;">
      {title}
    </h1>

    <!-- Subtitle -->
    {subtitle && (
      <p class="text-xl text-white/60 max-w-2xl animate-fade-in-up opacity-0" style="animation-delay: 500ms; animation-fill-mode: forwards;">
        {subtitle}
      </p>
    )}
  </div>
</section>

<style>
  .page-hero {
    background: linear-gradient(135deg, rgba(10,10,10,1) 0%, rgba(26,26,26,1) 100%);
  }
</style>
